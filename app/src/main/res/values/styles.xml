<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <color name="fui_bgEmail">#D0021B</color>
    <color name="fui_bgFacebook">#3B5998</color>
    <color name="fui_bgGoogle">#ffffff</color>
    <color name="fui_buttonShadow">#64BEBEBE</color>
    <color name="fui_linkColor">#4285F4</color>
    <color name="fui_transparent">#00000000</color>

    <style name="FreedomLearning" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/FreedomLearning.Button</item>
    </style>

    <style name="FreedomLearning.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="FreedomLearning.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FreedomLearning.TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="FreedomLearning.TextInputEditText.NameField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="FreedomLearning.TextInputEditText.PhoneField">
        <item name="android:inputType">phone</item>
    </style>

    <style name="FreedomLearning.TextInputEditText.PasswordField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="FreedomLearning.TextInputLayout" parent="Widget.Design.TextInputLayout" />

    <style name="FreedomLearning.TextInputLayout.EmailField">
        <item name="android:hint">@string/fui_email_hint</item>
    </style>

    <style name="FreedomLearning.TextInputLayout.PhoneField">
        <item name="android:hint">@string/fui_phone_hint</item>
    </style>

    <style name="FreedomLearning.TextInputLayout.NameField">
        <item name="android:hint">@string/fui_name_hint</item>
    </style>

    <style name="FreedomLearning.TextInputLayout.PasswordField">
        <item name="android:hint">@string/fui_password_hint</item>
    </style>


    <style name="FreedomLearning.TopProgressBar" parent="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

</resources>
